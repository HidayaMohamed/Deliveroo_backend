# Deliveroo Environment Configuration
# Copy this file to .env and fill in your values

# Database - PostgreSQL
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/deliveroo

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Google Maps API Key (get from Google Cloud Console)
VITE_GOOGLE_MAPS_API_KEY=

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# M-Pesa Configuration (if using real payments)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_BUSINESS_SHORT_CODE=123456
MPESA_PASSKEY=
